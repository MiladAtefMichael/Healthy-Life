<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/history_status_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="10/20/2020"
        android:textAlignment="center"
        android:textSize="25dp"
        android:background="#41434D49"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="heart rate"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/status_sign"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/red_status"
            android:layout_alignLeft="@+id/heart_status_text"/>
        <TextView
            android:id="@+id/heart_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40 bpm"
            android:paddingLeft="40dp"
            android:layout_gravity="center_vertical"
            android:textColor="#D50000"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="5dp"
    >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="blood pressure"
    android:layout_alignParentEnd="true"
    android:textSize="20dp"
    />
<ImageView
    android:id="@+id/presure_status_sign"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@drawable/red_status"
    android:layout_alignLeft="@+id/pressure_status_text"/>
<TextView
    android:id="@+id/pressure_status_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="180/30"
    android:paddingLeft="40dp"
    android:layout_gravity="center_vertical"
    android:textColor="#D50000"
    android:layout_alignParentRight="true"/>


</RelativeLayout>

</LinearLayout>