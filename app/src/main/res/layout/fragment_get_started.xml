<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Stay Save"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="@color/data_show_red"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ambulance"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="you can always stay save with Healthy life .if you suffer from hard Attack or (high and low ) blood pressure"
                android:textSize="25dp"
                android:textColor="#304FFE"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Apllication will detect your heart rate and blood pressure ."
                android:textSize="25dp"
                android:textColor="#304FFE"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="if you are in danger Application will send your location to Ambilance and ask from two of your realtive to save you"
                android:textSize="25dp"
                android:textColor="#304FFE"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/get_started"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/button_shape"
        android:text="Get Started "
        android:textColor="#FFF"
        android:textSize="20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/un_active_shape"
        android:text="Cancel "
        android:textColor="#FFF"
        android:textSize="20dp"
        android:layout_marginVertical="30dp"
        android:id="@+id/cancel"/>






        </LinearLayout>
    </ScrollView>

</LinearLayout>
