<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Stay Save"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="@color/data_show_red"
            />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ambulance"/>

    </LinearLayout>
    <Button
        android:id="@+id/required_data_button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="#304FFE"
        android:layout_margin="10dp"
        android:text="required Data"
        android:textColor="#fff"
        android:textSize="20dp"
        android:visibility="gone"
       />
    <LinearLayout
        android:id="@+id/status_data_countainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:background="@drawable/background_shape"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="choose countay"
            android:textColor="@color/data_show_red"/>
        <Spinner
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/country_spinner"
            style="@style/Widget.AppCompat.Spinner.Underlined"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="first realtive"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="mobile Number"
            android:textColor="@color/data_show_red"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="enter mobile number"
            android:textAlignment="center"
            android:background="@drawable/item_shape"
            android:inputType="phone"
            android:layout_marginRight="50dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="first realtive"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="mobile Number"
            android:textColor="@color/data_show_red"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="enter mobile number"
            android:textAlignment="center"
            android:background="@drawable/item_shape"
            android:inputType="phone"
            android:layout_marginRight="50dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/data_save"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/blue_button"
                android:text="save"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginHorizontal="10dp"/>
            <Button
                android:id="@+id/data_hide"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/blue_button"
                android:text="hide"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>



    </LinearLayout>
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="#304FFE"
        android:layout_margin="10dp"
        android:text="Status"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_shape">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="heart rate"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/status_sign"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/green_status"
            android:layout_alignLeft="@+id/status_text"/>
        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stable"
            android:paddingLeft="40dp"
            android:layout_gravity="center_vertical"
            android:textColor="#64DD17"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="blood pressure"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/presure_status_sign"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/green_status"
            android:layout_alignLeft="@+id/pressure_status_text"/>
        <TextView
            android:id="@+id/pressure_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stable"
            android:paddingLeft="40dp"
            android:layout_gravity="center_vertical"
            android:textColor="#64DD17"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>
</LinearLayout>
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="#304FFE"
        android:layout_margin="10dp"
        android:text="history"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/history_rv"
        android:background="@drawable/background_shape"/>

</LinearLayout>
</ScrollView>